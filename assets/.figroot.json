{"body":{
	"childNodes":[
		{"style":{
			"body":{
				"background":"#636363",
				"font-family": "monospace",
				"box-sizing":"border-box"
			},
			"#logo":{
				"width":"100%",
				"height":"20%",
				"padding":"5%",
				"background": "white"
			},
			"li":{
				"color":"white",
				"list-style":"none",
				"font-size":"21px"
			},
			".resource-preview":{
				"width":"50%",
				"display":"inline-block"
			},
			".resource-preview iframe":{
				"display":"block",
				"background":"white",
				"width":"97%"
			},
			".ctx-preview label, .ctx-preview iframe":{
				"margin-left":"3%"
			},
			"form":{
				"position":"relative"
			},
			"form button":{
				"position":"absolute",
				"right": "0",
				"bottom":"-20px"
			},
			"form label":{
				"display":"block",
				"color":"white",
				"float":"left",
				"font-weight":"800",
				"width":"45px",
				"font-size":"23px",
				"padding-top":"6px"
			},
			"form input":{
				"width":"Calc(97% - 45px)",
				"height": "38px",
				"margin-bottom":"7px"
			},
			"img#merge":{
				"width":"100%",
				"merge-top":"-5px"
			},
			".combined-preview":{
			    "width": "86%",
    			"margin": "12px 7% 0"
			},
			"div.combined-preview":{
			    "font-size": "21px",
    			"background": "white",
    			"overflow":"hidden",
    			"text-overflow":"ellipsis"
			},
			"iframe.combined-preview":{
				"height":"800px"
			}
		}},
		{"img":{
			"id":"logo",
			"src":"./ink.svg"
		}},
		{"ul":{
			"id":"readme",
			"childNodes": [
				{"li":{"textContent":"Create a presentation layer for any JSON API"}},
				{"li":{"textContent":"Merge custom layout & style with data response"}}
			]
		}},
		{"form":{
			"childNodes":[
				{"div":{
					"class":"resource-preview fig-preview",
					"childNodes":[
						{"label":{
							"for":"fig",
							"textContent":"fig"
						}},
						{"input":{
							"type":"text",
							"id":"fig",
							"name":"egfig",
							"value":"{{egfig}}"
						}},
						{"iframe":{
							"frameborder": "0",
							"id":"figframe",
							"class":"preview",
							"src":"{{egfig}}"
						}}
					]
				}},
				{"div":{
					"class":"resource-preview ctx-preview",
					"childNodes":[
						{"label":{
							"for":"ctx",
							"textContent":"ctx"
						}},
						{"input":{
							"type":"text",
							"id":"ctx",
							"name":"egctx",
							"value":"{{egctx}}"
						}},
						{"iframe":{
							"class":"preview",
							"id":"ctxframe",
							"src":"{{egctx}}",
							"frameborder": "0"
						}}
					]
				}},
				{"button":{
					"type":"submit",
					"textContent":"submit fig + ctx"
				}}
			]
		}},
		{"img":{
			"id":"merge",
			"src":"./merge.svg"
		}},
		{"div":{
			"class":"combined-preview",
			"textContent": "http://ctxify.com/fig={{egfig}}&ctx={{egctx}}"
		}},
		{"iframe":{
			"class":"combined-preview",
			"frameborder": "0",
			"src": "http://ctxify.com/fig={{egfig}}&ctx={{egctx}}"
		}}
	]
}}